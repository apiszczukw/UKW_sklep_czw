@model IEnumerable<Film>

<div class="container all-films">
	<div class="row g-4">
		@foreach (var film in Model)
		{
		<div class="col-md-4 col-sm-6 d-flex justify-content-center">
				<a href="@Url.Action("Details","Films",new {filmId=film.FilmId})"><img src="~/posters/@film.Poster" alt="Film @film.Poster" class="poster"></a>
		</div>
		}
	</div>
</div>